<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="#F4E1A7">

    <ImageView
        android:id="@+id/imageNoNetwork"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/no_internet_connection"
        app:layout_constraintBottom_toTopOf="@+id/NoNetworktxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_signal_wifi_connected_no_internet_4_24" />

    <TextView
        android:id="@+id/NoNetworktxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/no_internet_connection"
        android:textAlignment="center"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnNoNetwork"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageNoNetwork" />

    <Button
        android:id="@+id/btnNoNetwork"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/try_again"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#CFB787"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NoNetworktxt" />
</androidx.constraintlayout.widget.ConstraintLayout>